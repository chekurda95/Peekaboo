<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chekurda.peekaboo">

    <application
        android:name="com.chekurda.peekaboo.app.PeekabooApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_peekaboo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_peekaboo_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.chekurda.peekaboo.presentation.MainActivity"
            android:screenOrientation="locked"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

    </application>

</manifest>